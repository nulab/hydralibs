{
  "name": "hydralibs",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc --outDir dist",
    "check": "npm run build && npm run lint",
    "lint": "tslint -c tslint.json 'examples/counter/src/*.ts' 'packages/bootstrap/src/*.ts' 'packages/dispatch/*.ts' 'packages/dispatch-react/*.ts' 'packages/dispatch-redux/*.ts' 'packages/router/*.ts'",
    "format": "prettier --write \"**/*.{ts*(x),js*(on),scss}\""
  },
  "devDependencies": {
    "@types/mocha": "5.2.0",
    "@types/node": "^11.9.5",
    "lerna": "^3.13.1",
    "mocha": "6.0.2",
    "ts-mocha": "^6.0.0",
    "husky": "^1.3.1",
    "typescript": "^3.3.0",
    "prettier": "^1.16.4",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^4.1.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
